<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <tcking.github.com.giraffeplayer.IjkVideoView
            android:id="@+id/fragment_video_vv01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/fragment_video_rl01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/fragment_video_rl03"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:background="#000"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_video_tv01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:background="#000"
                android:singleLine="true"
                android:textColor="#FFF"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/fragment_video_iv02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_cache_down"
                android:scaleType="fitCenter"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_video_rl02"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="#000"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fragment_video_iv01"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:contentDescription="@string/empty"
                android:src="@android:drawable/ic_media_pause" />

            <TextView
                android:id="@+id/fragment_video_tv02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/fragment_video_iv01"
                android:gravity="right"
                android:textColor="#FFF"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/fragment_video_sk01"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/fragment_video_tv03"
                android:layout_toRightOf="@id/fragment_video_tv02" />

            <TextView
                android:id="@+id/fragment_video_tv03"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:textColor="#FFF"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_video_tv05"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="#000"
            android:drawableTop="@drawable/icon_volume"
            android:gravity="center"
            android:textColor="#FFF"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_video_tv06"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="#000"
            android:drawableTop="@drawable/icon_brightness"
            android:gravity="center"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_video_tv07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000"
            android:drawableBottom="@drawable/icon_forward"
            android:gravity="center"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_video_tv08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000"
            android:drawableBottom="@drawable/icon_backward"
            android:gravity="center"
            android:visibility="gone" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/progressbar"
            android:layout_gravity="center"
            android:focusable="false" />
    </FrameLayout>

</FrameLayout>