<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playlist_lv_playlist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00BF2F"
    android:layout_margin="2dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/itme_iv01"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:background="#000"
        android:contentDescription="@string/empty"
        android:src="@drawable/img_index" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_tv01"
            android:gravity="left|center_vertical"
            android:layout_width="wrap_content"
            android:paddingLeft="1dp"
            android:layout_height="40dp"
            android:singleLine="true"/>

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:weightSum="3"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/item_ib01"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:src="@android:drawable/ic_media_play" />

            <ImageButton
                android:id="@+id/item_ib02"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:src="@android:drawable/stat_sys_download" />

            <ImageButton
                android:id="@+id/item_ib03"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:src="@android:drawable/ic_menu_delete" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>