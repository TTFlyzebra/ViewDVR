<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#FFF"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_url"
        android:layout_width="@dimen/y300"
        android:layout_height="@dimen/y180"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/y30"
        android:layout_marginLeft="@dimen/x25"
        android:layout_marginTop="@dimen/y30"
        android:background="#AF000000" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_url"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="@dimen/y20"
        android:layout_toLeftOf="@+id/iv_play"
        android:layout_toRightOf="@+id/iv_url"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_url"
        android:layout_marginBottom="@dimen/y20"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/iv_play"
        android:layout_toRightOf="@+id/iv_url"
        android:maxLines="2"
        android:text=""
        android:textColor="#909090"
        android:textSize="12sp" />


    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="@dimen/y90"
        android:layout_height="@dimen/y180"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@+id/iv_del"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_cache_play" />

    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="@dimen/y90"
        android:layout_height="@dimen/y180"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_menu_delete" />

</RelativeLayout>